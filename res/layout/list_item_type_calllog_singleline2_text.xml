<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mms_main_item_bg" >

    <TextView
        android:id="@+id/litst_text"
        style="@style/cal_log_main_item_style"
        android:gravity="top"
        android:text="@string/text_add_contact" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/litst_text"
        android:layout_marginLeft="8.0dp"
        android:layout_marginRight="8.0dp"
        >
        <ImageView
	        android:id="@+id/call_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        />
         <TextView
	        android:id="@+id/call_type_str"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_toRightOf="@id/call_type"
	        android:layout_centerVertical="true"
	        android:textColor="@drawable/textcolor_selector"
	        android:textSize="@dimen/text_size_25" />
        <TextView
	        android:id="@+id/litst_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_gravity="right|center_vertical"
	        android:textColor="@drawable/textcolor_selector"
	        android:textSize="@dimen/text_size_25" />
    </RelativeLayout>

</RelativeLayout>