<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60.0dip"
            android:gravity="center" >

            <ImageView
                android:id="@+id/hour1"
                android:layout_width="@dimen/time_width"
                android:layout_height="@dimen/time_height" />

            <ImageView
                android:id="@+id/hour2"
                android:layout_width="@dimen/time_width"
                android:layout_height="@dimen/time_height" />

            <ImageView
                android:layout_width="@dimen/time_width"
                android:layout_height="@dimen/time_height"
                android:src="@drawable/time_colon" />

            <ImageView
                android:id="@+id/minute1"
                android:layout_width="@dimen/time_width"
                android:layout_height="@dimen/time_height" />

            <ImageView
                android:id="@+id/minute2"
                android:layout_width="@dimen/time_width"
                android:layout_height="@dimen/time_height" />
        </LinearLayout>

        <TextView
            android:id="@+id/am_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center"
            android:layout_marginRight="15.0dip"
            android:gravity="top|right|center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130.0dip"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:gravity="center_horizontal"
            android:textColor="#ff3d4245"
            android:textSize="35.0sp" />

        <TextView
            android:id="@+id/lunar_calendar_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:gravity="center_horizontal"
            android:textColor="#ff3d4245"
            android:textSize="35.0sp" />

        <TextView
            android:id="@+id/mobile_operators_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ff3d4245"
            android:textSize="35.0sp" />

        <TextView
            android:id="@+id/unread_sms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="35.0sp" />

        <TextView
            android:id="@+id/unread_call"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="35.0sp" />
    </LinearLayout>

</RelativeLayout>